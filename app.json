{
  "expo": {
    "name": "Contactly",
    "slug": "contactly",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#00183d",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "fonts": [
      "node_modules/@expo/vector-icons/build/vendor/react-native-vector-icons/Fonts/MaterialCommunityIcons.ttf"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.contact.app",
      "infoPlist": {
        "NSContactsUsageDescription": "This app needs access to your contacts to sync them with the cloud."
      }
    },
    "android": {
      "package": "com.contact.app",
      "permissions": [
        "READ_CONTACTS",
        "WRITE_CONTACTS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/image/logo.jpeg",
      "build": {
        "babel": {
          "include": [
            "@expo/vector-icons"
          ]
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Contact to access your contacts."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you set contact profile images."
        }
      ]
    ],
    "scheme": "contact",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}

